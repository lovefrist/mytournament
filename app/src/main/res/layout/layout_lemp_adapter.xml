<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_intersection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dlong_recycler_adapter"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_lempred"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/dlong_recycler_adapter"
        />

    <TextView
        android:id="@+id/tv_lempyellow"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/dlong_recycler_adapter"
        />

    <TextView
        android:id="@+id/tv_lempgreen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/dlong_recycler_adapter"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dlong_recycler_adapter"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_cz1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="操作项"
                android:gravity="center"
                />
            <CheckBox

                android:id="@+id/cb_confirm"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dlong_recycler_adapter"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_setup1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center"

                />
            <Button
                android:id="@+id/btn_cz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:visibility="gone"
                />
        </LinearLayout>


</LinearLayout>