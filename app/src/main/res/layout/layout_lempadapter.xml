<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/tv_intersectionnow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="路口1"
        android:textSize="20dp"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="配置信息"
            android:textSize="23dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_greentime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="绿灯5秒"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_yellowtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="黄灯5秒"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_redtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:text="红灯5秒"
            android:gravity="center"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="横向状态"
            android:textColor="#000"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_lemptimehen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="绿灯5秒"
            android:gravity="center|left"
            android:textColor="#000"
            />
        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="纵向状态"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tv_lemptimezhong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000"
            android:gravity="center|left"
            android:text="红灯5秒"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="人工控制"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_yuantimehen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/yuan46green"
                android:text="5"
                android:gravity="center"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_yuantimezhong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/yuan46green"
                android:text="5"
                android:gravity="center"
                android:textSize="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_lemphen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="横向"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/btn_lempzhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="纵向"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>