<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.25"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/tv_ring_expressway3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/leftfillt"
                android:gravity="center"
                android:text="环      城"
                android:textSize="19dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ring_expressway4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="环   城"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2" />

                    <TextView
                        android:id="@+id/tv_XueyuanRoad"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="学 院 路"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1" />

                    <TextView
                        android:id="@+id/tv_lenovoroad"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:background="#fff"
                        android:gravity="center"
                        android:text="联  想  路"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textSize="22sp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_ring_expressway5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:background="#fff"
                    android:text="快    速    路"

                    android:textSize="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2" />

                <TextView
                    android:id="@+id/tv_happyroad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="幸福路"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1" />

                <TextView
                    android:id="@+id/tv_hospitalroad"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="医院路"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ring_expressway6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bobleftfillt"
                android:gravity="center"
                android:text="    环       城"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25">

                        <TextView
                            android:id="@+id/tv_ring_expressway2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="快   速    路"
                            android:textSize="19dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.12" />

                        <TextView
                            android:id="@+id/tv_ring_expressway1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="#fff" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_parkinglot"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:ems="1"
                            android:gravity="center"
                            android:text="停车场" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"

                        >

                        <TextView
                            android:id="@+id/tv_ring_expressway7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="快  速  路"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.12" />

                        <TextView
                            android:id="@+id/tv_ring_expressway8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:background="#fff" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ringspeed1"
                            android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/ranigfillt"

                        android:gravity="center"
                        android:text="环城高速"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/tv_ringspeed2"
                       android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                       android:background="@drawable/ranigfillttwo"

                        android:gravity="center"
                        android:text="环城高速"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/im_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/refresh"
                    />
              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                  android:orientation="horizontal"
                  >
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      >
                      <TextView
                          android:id="@+id/tv_time"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="2019/9/25"
                          android:gravity="right"
                          android:textSize="25dp"
                          />
                      <TextView
                          android:id="@+id/tv_xingqi"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="星期一"
                          android:gravity="center"
                          android:textSize="25dp"
                          />

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:orientation="vertical"

                      >
                      <TextView
                          android:id="@+id/tv_temperature13"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="温度：51℃"
                          android:gravity="center"
                          android:textSize="20dp"
                          />
                      <TextView
                          android:id="@+id/tv_humidity13"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="相对湿度：58%"
                          android:textSize="20dp"
                        />
                      <TextView
                          android:id="@+id/tv_particulate13"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="PM2.5: 29µg/m3"

                          />
                  </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="道路拥挤程度示意："
                            android:gravity="right"

                            />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="9dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="严重拥堵:"
                                    android:gravity="right"
                                    android:layout_marginRight="5dp"
                                    android:textSize="12dp"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#b01e23"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="9dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="中度拥堵:"
                                android:gravity="right"
                                android:layout_marginRight="5dp"
                                android:textSize="12dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#e33532"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="9dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="一般拥堵:"
                                android:gravity="right"
                                android:layout_marginRight="5dp"
                                android:textSize="12dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#f49b25"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="9dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="缓行:"
                                android:gravity="right"
                                android:layout_marginRight="5dp"
                                android:textSize="12dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#ece93a"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="9dp"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="畅通:"
                                android:gravity="right"
                                android:layout_marginRight="5dp"
                                android:textSize="12dp"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#6ab82e"
                                android:textSize="12dp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"

                        >
                        <ImageView
                            android:id="@+id/im_gar"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/jiaojing2_1"

                            />
                        <ImageView
                            android:id="@+id/im_bay"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/jiaojing1_1"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>